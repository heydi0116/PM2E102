<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E102.MainPage">

    <StackLayout>

        <Image x:Name="foto" Source="{Binding imageC}"/>
        <Button x:Name="TomarFoto" Text="Tomar Foto" Clicked="TomarFoto_Clicked"/>
        <Button x:Name="Galeria" Text="Agregar Foto" Clicked="Galeria_Clicked"/>

        <Label x:Name="lblLat" Text="{Binding latitudC}"/>
        <Label x:Name="lblLon" Text="{Binding longitudC}"/>
        <Entry x:Name="txtDes" Text="{Binding descripcionC}" Placeholder="Ingrese su descripción"/>

        <Button x:Name="Agregar" Text="Agregar" Clicked="Agregar_Clicked"/>
        <Button x:Name="Lista" Text="Lista" Clicked="Lista_Clicked"/>
        <Button x:Name="Eliminar" Text="Eliminar" Clicked="Eliminar_Clicked"/>


    </StackLayout>

</ContentPage>
